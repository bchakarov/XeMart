@model XeMart.Web.ViewModels.Categories.SubcategoryProductsViewModel

@{
    this.ViewData["Title"] = Model.Name;
}

<!-- Category Area -->
<section class="category">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <vc:categories-sidebar></vc:categories-sidebar>                
                <div class="price-range">
                    <div class="sec-title">
                        <h6>Price</h6>
                    </div>
                    <div class="price-filter">
                        <div id="slider-range"></div>
                        <input type="text" id="amount" readonly>
                        <button type="button" name="button">Filter</button>
                    </div>
                </div>                
            </div>
            <div class="col-md-9">
                <div class="product-box">
                    <div class="cat-box d-flex justify-content-between">
                        <!-- Nav tabs -->
                        <div class="view">
                            <ul class="nav nav-tabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" href="#grid"><i class="fa fa-th-large"></i></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#list"><i class="fa fa-th-list"></i></a>
                                </li>
                            </ul>
                        </div>
                        <div class="sortby">
                            <span>Sort By</span>
                            <select class="sort-box">
                                <option>Position</option>
                                <option>Name</option>
                                <option>Price</option>
                                <option>Rating</option>
                            </select>
                        </div>
                        <div class="show-item">
                            <span>Show</span>
                            <select class="show-box">
                                <option>12</option>
                                <option>24</option>
                                <option>36</option>
                            </select>
                        </div>
                        <div class="page">
                            <p>Page @Model.PageNumber of @Model.PagesCount</p>
                        </div>
                    </div>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="grid" role="tabpanel">
                            <div class="row">
                                @foreach (var product in Model.Products)
	                            {
                                    <div class="col-lg-4 col-md-6">
                                        <div class="tab-item">
                                            <div class="tab-img">
                                                <img class="main-img img-fluid" src="@product.ImageUrl">
                                                <div class="layer-box">
                                                    <a href="" class="it-fav" data-toggle="tooltip" data-placement="left" title="Favourite"><i class="fas fa-heart mr-0 pt-1"></i></a>
                                                </div>
                                            </div>
                                            <div class="tab-heading">
                                                <p><a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></p>
                                            </div>
                                            <div class="img-content d-flex justify-content-between">
                                                <div>
                                                    <partial name="_ProductRatingPartial" model="new XeMart.Web.ViewModels.Products.ProductRatingViewModel { AverageRating = product.AverageRating, ShowAverageRating = false }" />
                                                    <ul class="list-unstyled list-inline price">
                                                        <li class="list-inline-item">$@product.Price</li>
                                                        <li class="list-inline-item"></li>
                                                    </ul>
                                                </div>
                                                <div>
                                                    <a href="" data-toggle="tooltip" data-placement="top" title="Add to Cart"><i class="fas fa-shopping-cart"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
	                            }
                            </div>
                        </div>
                        <div class="tab-pane fade" id="list" role="tabpanel">
                            <div class="row">
                                @foreach (var product in Model.Products)
	                            {
                                    <div class="col-lg-12 col-md-6">
                                        <div class="tab-item2">
                                            <div class="row">
                                                <div class="col-lg-4 col-md-12">
                                                    <div class="tab-img">
                                                        <img class="main-img img-fluid" src="@product.ImageUrl">
                                                    </div>
                                                </div>
                                                <div class="col-lg-8 col-md-12">
                                                    <div class="item-heading d-flex justify-content-between">
                                                        <div class="item-top">
                                                            <ul class="list-unstyled list-inline cate">
                                                                <li class="list-inline-item"><a asp-area="" asp-controller="MainCategories" asp-action="Subcategories" asp-route-mainCategoryId="@product.SubcategoryMaincategoryId">@product.SubcategoryMaincategoryName,</a></li>
                                                                <li class="list-inline-item"><a asp-area="" asp-controller="Subcategories" asp-action="Products" asp-route-subcategoryId="@product.SubcategoryId">@product.SubcategoryName</a></li>
                                                            </ul>
                                                            <p><a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">@product.Name</a></p>
                                                            <partial name="_ProductRatingPartial" model="new XeMart.Web.ViewModels.Products.ProductRatingViewModel { AverageRating = product.AverageRating, ShowAverageRating = false }" />
                                                        </div>
                                                        <div class="item-price">
                                                            <ul class="list-unstyled list-inline price">
                                                                <li class="list-inline-item">$@product.Price</li>
                                                                <li class="list-inline-item"></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="item-content">
                                                        <p>@product.Description</p>
                                                        <a href="" class="it-cart"><span class="it-img"><i class="fas fa-shopping-cart"></i></span><span class="it-title">Add To Cart</span></a>
                                                        <a href="" class="it-fav" data-toggle="tooltip" data-placement="top" title="Favourite"><i class="fas fa-heart mr-0 pt-1"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
	                            }
                            </div>
                        </div>
                    </div>
                    <div class="pagination-box text-center">
                        <ul class="list-unstyled list-inline">
                            <li class="list-inline-item"><a href="">1</a></li>
                            <li class="list-inline-item"><a href="">2</a></li>
                            <li class="active list-inline-item"><a href="">3</a></li>
                            <li class="list-inline-item"><a href="">4</a></li>
                            <li class="list-inline-item"><a href="">...</a></li>
                            <li class="list-inline-item"><a href="">12</a></li>
                            <li class="list-inline-item"><a href=""><i class="fa fa-angle-right"></i></a></li>
                            <li class="list-inline-item"><a href=""><i class="fa fa-angle-double-right"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Category Area -->
