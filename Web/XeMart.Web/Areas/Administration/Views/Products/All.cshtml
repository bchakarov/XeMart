@model IEnumerable<XeMart.Web.ViewModels.Administration.Products.ProductViewModel>
@{
    ViewData["Title"] = "All Products";
}

<div class="shadow card">
    <div class="card-header h3 text-center">@ViewData["Title"]</div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="customTable" class="table table-bordered text-center" width="100%" cellspacing="0">
                <thead class="thead-light">
                    <tr>
                        <th>Name</th>
                        <th>Price (USD)</th>
                        <th>Subcategory</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr class="row">
                            <td class="col-12 d-flex justify-content-center"><strong>No products</strong></td>
                        </tr>
                    }
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @product.Name
                            </td>
                            <td>
                                @product.Price
                            </td>
                            <td>
                                @product.SubcategoryName
                            </td>
                            <td>
                                <img src="@product.ImageUrl" class="custom-image-box" />
                            </td>
                            <td>
                                <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-success btn-sm">Edit</a>
                                <a asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles{
    <!-- Datatables -->
    <link href="~/lib/datatables-js/css/dataTables.bootstrap4.min.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts{
    <script src="~/lib/datatables-js/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatables-js/js/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            $('#customTable').DataTable();
        });
    </script>
}
