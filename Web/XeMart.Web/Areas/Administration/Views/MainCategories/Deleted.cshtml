@model IEnumerable<XeMart.Web.ViewModels.Administration.MainCategories.DeletedMainCategoryViewModel>
@{ ViewData["Title"] = "Deleted Main Categories"; }

<div class="shadow card">
    <div class="card-header h3 text-center">@ViewData["Title"]</div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr class="row">
                    <th scope="col" class="col-1 d-flex justify-content-center">#</th>
                    <th scope="col" class="col-3 d-flex justify-content-center">Name</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Icon</th>                    
                    <th scope="col" class="col-3 d-flex justify-content-center">Deleted On</th>
                    <th scope="col" class="col-3 d-flex justify-content-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr class="row">
                        <td class="col-12 d-flex justify-content-center"><strong>No deleted main categories</strong></td>
                    </tr>
                }
                @foreach (var mainCategory in Model)
                {
                    <tr class="row">
                        <td class="col-1 d-flex justify-content-center">
                            @mainCategory.Id
                        </td>
                        <td class="col-3 d-flex justify-content-center">
                            @mainCategory.Name
                        </td>
                        <td class="col-2 d-flex justify-content-center">
                            <i class="@mainCategory.FontAwesomeIcon"></i>
                        </td>                        
                        <td class="col-3 d-flex justify-content-center">
                            @mainCategory.DeletedOn
                        </td>
                        <td class="col-md-3 d-flex justify-content-around">
                            <div class="mr-2">
                                <a asp-controller="MainCategories" asp-action="Undelete" asp-route-id="@mainCategory.Id" class="btn btn-primary btn-sm">Undelete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
