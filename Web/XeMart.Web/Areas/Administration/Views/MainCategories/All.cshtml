@model IEnumerable<XeMart.Web.ViewModels.Administration.MainCategories.MainCategoryViewModel>
@{ ViewData["Title"] = "All Main Categories"; }

<div class="shadow card">
    <div class="card-header h3 text-center">@ViewData["Title"]</div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr class="row">
                    <th scope="col" class="col-1 d-flex justify-content-center">#</th>
                    <th scope="col" class="col-3 d-flex justify-content-center">Name</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Icon</th>
                    <th scope="col" class="col-2 d-flex justify-content-center">Image</th>
                    <th scope="col" class="col-1 d-flex justify-content-center">Subcategories</th>
                    <th scope="col" class="col-4 d-flex justify-content-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr class="row">
                        <td class="col-12 d-flex justify-content-center"><strong>No main categories</strong></td>
                    </tr>
                }
                @foreach (var mainCategory in Model)
                {
                    <tr class="row">
                        <td class="col-1 d-flex justify-content-center">
                            @mainCategory.Id
                        </td>
                        <td class="col-3 d-flex justify-content-center">
                            @mainCategory.Name
                        </td>
                        <td class="col-1 d-flex justify-content-center">
                            <i class="@mainCategory.FontAwesomeIcon"></i>
                        </td>
                        <td class="col-2 d-flex justify-content-center">
                            <img src="@mainCategory.ImageUrl" class="custom-image-box" />
                        </td>
                        <td class="col-1 d-flex justify-content-center">
                            @mainCategory.SubcategoriesCount
                        </td>
                        <td class="col-md-4 d-flex justify-content-around">
                            <div class="mr-2">
                                <a asp-controller="MainCategories" asp-action="Edit" asp-route-id="@mainCategory.Id" class="btn btn-success btn-sm">Edit</a>
                            </div>
                            <div class="mr-2">
                                <a asp-controller="MainCategories" asp-action="Delete" asp-route-id="@mainCategory.Id" class="btn btn-danger btn-sm">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
